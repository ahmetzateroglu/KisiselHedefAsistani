<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/turuncu_border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hedefi Güncelle"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="@color/turuncu"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/common_full_open_on_phone"
                android:id="@+id/updateImage"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/updateTitle"
                android:background="@drawable/turuncu_border"
                android:layout_marginTop="10dp"
                android:padding="16dp"
                android:hint="Hedef İsmi Giriniz:"
                android:gravity="start|center_vertical"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/updatePrior"
                android:background="@drawable/turuncu_border"
                android:layout_marginTop="10dp"
                android:padding="16dp"
                android:hint="Hedef Önceliği Giriniz."
                android:gravity="start|center_vertical" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/updateCat"
                android:background="@drawable/turuncu_border"
                android:layout_marginTop="10dp"
                android:padding="16dp"
                android:hint="Hedef Kategorisi Giriniz."
                android:gravity="start|center_vertical" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/updateDesc"
                android:background="@drawable/turuncu_border"
                android:layout_marginTop="10dp"
                android:padding="16dp"
                android:hint="Enter description"
                android:gravity="start|center_vertical" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Güncelle"
                android:id="@+id/updateButton"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:background="@color/turuncuacik"
                app:cornerRadius = "20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>